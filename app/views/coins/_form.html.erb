<%= form_for @coin, html: { multipart: true } do |f| %>
   <div>
   	<%= f.label :name %>
   	<%= f.text_field :name %>
   </div>

   <div>
   	<%= f.label :description %>
   	<%= f.text_area :description %>
   </div>


   <div>
       <%= f.label :condition %>
       <%= f.number_field :condition %>
      </div>

   <div>
   	 <%= f.label :market_value %>
   	 <%= f.number_field :market_value %>
   	</div>

    <div>
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div>

   	<div>
   		<%= f.submit %>
   	</div>
<% end %>